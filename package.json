{
	"name": "vb-logger",
	"version": "0.0.0",
	"description": "My simple console winston logger with typescript",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist/**/*"
	],
	"scripts": {
		"start": "nodemon src/index.ts",
		"dev": "nodemon src/index.ts",
		"clean": "rmdir dist /S /Q",
		"build": "tsc",
		"prepare": "npm run build",
		"preversion": "npm run lint",
		"postversion": "git push && git push --tags",
		"version": "npm run format && git add -A src",
		"prepublishOnly": "npm test && npm run lint",
		"refresh": "rm -rf ./node-modules ./package-lock.json && npm install",
		"format": "prettier --write \"src/**/*.ts\"",
		"tdocs": "typedoc --out ./typedocs --exclude **/node_modules/**  ./src --readme ./README.md",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Vladimirbr/vb-logger.git"
	},
	"author": "VB",
	"keywords": [
		"winston",
		"logger",
		"typescript",
		"log",
		"logging",
		"logs",
		"loglevel"
	],
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Vladimirbr/vb-logger/issues"
	},
	"homepage": "https://github.com/Vladimirbr/vb-logger#readme",
	"dependencies": {
		"winston": "^3.6.0"
	},
	"devDependencies": {
		"nodemon": "^2.0.15",
		"prettier": "^2.5.1",
		"ts-node": "^10.5.0",
		"typedoc": "^0.22.11",
		"typescript": "^4.5.5"
	},
	"engines": {
		"node": "16.13.0",
		"npm": "8.1.0"
	}
}
